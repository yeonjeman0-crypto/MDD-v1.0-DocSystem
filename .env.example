# MDD System Production Environment Configuration

# API Server Settings
NODE_ENV=production
PORT=4000
HOST=0.0.0.0

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/mdd.db

# For PostgreSQL (uncomment to use)
# DATABASE_TYPE=postgres
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_USERNAME=mdd_user
# DATABASE_PASSWORD=your_password
# DATABASE_NAME=mdd_system

# JWT Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100MB

# DRK Package Settings
PACKAGE_OUTPUT_DIR=./packages
TEMP_DIR=./temp

# Compression Settings
COMPRESSION_LEVEL=6
COMPRESSION_ALGORITHM=zstd

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# CORS Settings
CORS_ORIGIN=http://localhost:3000

# Admin Portal
ADMIN_PORTAL_URL=http://localhost:3000

# Security Settings
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Email Settings (Optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Monitoring (Optional)
# PROMETHEUS_ENABLED=true
# PROMETHEUS_PORT=9090

# Redis (Optional for caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=