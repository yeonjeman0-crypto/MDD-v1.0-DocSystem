# MDD v1.0 Maritime Document Distribution System
# Environment Configuration

# Application
NODE_ENV=development
PORT=3003
API_PREFIX=api
APP_NAME="MDD v1.0 API"
APP_VERSION=1.0.0

# Database Configuration
# For Development (SQLite)
DB_PATH=database.sqlite

# For Production (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=mdd_user
DB_PASSWORD=mdd_password
DB_NAME=mdd_v1_production
DB_POOL_SIZE=10
DATABASE_URL=postgresql://mdd_user:mdd_password@localhost:5432/mdd_v1_production

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=12

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif

# Document Storage
DOCUMENTS_PATH=./절차서 PDF
STATIC_FILES_PATH=./static
PDF_BASE_URL=http://localhost:3003/pdf

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@company.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@doriko.com
FROM_NAME="DORIKO MDD System"

# External Services
ELASTICSEARCH_URL=http://localhost:9200
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=mdd-documents
MINIO_USE_SSL=false

# Monitoring & Logging
LOG_LEVEL=debug
ENABLE_SWAGGER=true
PROMETHEUS_ENDPOINT=/metrics
HEALTH_CHECK_ENDPOINT=/health

# Security Headers
CORS_ORIGIN=http://localhost:5178,http://localhost:3000
HELMET_ENABLED=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Company Information
COMPANY_ID=DORIKO
COMPANY_NAME="DORIKO Shipping Co., Ltd."
COMPANY_EMAIL=info@doriko.com
COMPANY_PHONE="+82-51-123-4567"

# Maritime Specific
DEFAULT_FLAG_STATE="South Korea"
DEFAULT_CLASSIFICATION_SOCIETY="Korean Register (KR)"
IMO_API_KEY=your-imo-api-key
MMSI_PROVIDER_URL=https://api.mmsi-provider.com

# Backup & Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Performance
CACHE_TTL=3600
DB_CONNECTION_TIMEOUT=30000
REQUEST_TIMEOUT=30000
MAX_CONCURRENT_REQUESTS=100

# Feature Flags
ENABLE_AUDIT_LOGGING=true
ENABLE_DOCUMENT_VERSIONING=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_OFFLINE_MODE=true
ENABLE_MULTI_COMPANY=false